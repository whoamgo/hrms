        p {
            font-size: 16px;
            color: #666;
            line-height: 1.6;
        }

        .countdown {
            margin-top: 20px;
            font-size: 16px;
            color: #555;
        }

        .progress {
            width: 100%;
            height: 6px;
            background: #eaeaea;
            border-radius: 5px;
            overflow: hidden;
